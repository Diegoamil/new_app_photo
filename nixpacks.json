{
  "providers": [
    "node"
  ],
  "buildImage": "node:18-alpine",
  "variables": {
    "NODE_ENV": "production",
    "CI": "false"
  },
  "phases": {
    "install": {
      "cmds": [
        "npm ci"
      ]
    },
    "build": {
      "cmds": [
        "npm run build"
      ],
      "dependsOn": ["install"]
    }
  },
  "start": {
    "cmd": "npm run server"
  }
}
